<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ExamenApp.Pages.CirculoPage"
             Title="CirculoPage">
    <VerticalStackLayout>
        <Entry
            Placeholder="Radio" Keyboard="Numeric" Text="{Binding Radius}" />

        <Button
            Text="Calcular Área" Command="{Binding CalculateCommand}" />

        <Label
            Text="Área del Círculo: {Binding Area}" />

        <Label
            Text="{Binding Area}" FontSize="20" FontAttributes="Bold" />

        <Button
            Text="Limpiar" Command="{Binding ClearCommand}"

         <Button
                Text="Limpiar Todos" Command="{Binding ClearAllCommand}" />

    </VerticalStackLayout>
</ContentPage>
